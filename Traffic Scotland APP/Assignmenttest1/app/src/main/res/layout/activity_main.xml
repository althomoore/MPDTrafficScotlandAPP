<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentscreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|right"
            android:elevation="0dp"
            android:text="Current Incidents"
            android:textSize="14sp"
            android:typeface="normal" />

        <Button
            android:id="@+id/roadworks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Roadworks"
            android:typeface="normal" />

        <Button
            android:id="@+id/planned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Planned Roadworks"
            android:typeface="normal" />

        <TextView
            android:id="@+id/urlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="10dp"
            android:text="Road Traffic Scotland App\n\nAlan Thomas Moore\nStudent ID: S1436102\n\n\nClick on a button to get started"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </LinearLayout>


</ScrollView>
